{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend",
  "main": "src/app.ts",
  "scripts": {
    "setup-dev-env-vars": "sh -c '[ -f src/config/.env.development ] || cp src/config/.env.example src/config/.env.development'",
    "setup-test-env-vars": "sh -c '[ -f src/config/.env.test ] || cp src/config/.env.example src/config/.env.test'",
    "setup-dev": "npm install && npm run setup-dev-env-vars && npm run setup-test-env-vars",
    "clean-setup-dev": "npm ci && npm run setup-dev-env-vars && npm run setup-test-env-vars",
    "clean-setup": "npm ci --production",
    "build": "tsc -p tsconfig-build.json",
    "start": "NODE_PATH=./dist node dist/app.js",
    "start-dev": "DEPLOY_STAGE=local NODE_ENV=development NODE_PATH=./src npx ts-node-dev --trace-warnings --inspect --respawn --transpile-only --ignore-watch node_modules src/app.ts",
    "test": "DEPLOY_STAGE=local NODE_ENV=test vitest --config src/vitest.config.ts",
    "test-coverage": "DEPLOY_STAGE=local NODE_ENV=test vitest run --config src/vitest.config.ts --coverage",
    "type-check": "tsc --noEmit",
    "migration-generate": "DEPLOY_STAGE=local NODE_ENV=development NODE_PATH=./src npx ts-node-dev -P ./tsconfig.json -r tsconfig-paths/register ../../node_modules/typeorm/cli.js migration:generate -d ./src/config/database/index.ts ./src/api/core/migrations/$npm_config_name",
    "migration-run": "DEPLOY_STAGE=local NODE_ENV=development NODE_PATH=./src npx ts-node-dev -P ./tsconfig.json -r tsconfig-paths/register ../../node_modules/typeorm/cli.js migration:run -d ./src/config/database/index.ts"
  },
  "engines": {
    "node": ">=20"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^9.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/dotenv-safe": "^8.1.6",
    "@types/express": "^4.17.14",
    "@types/node": "^22.5.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@vitest/coverage-istanbul": "^3.2.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@peculiar/x509": "^1.12.3",
    "@simplewebauthn/server": "^13.1.2",
    "@stellar/stellar-sdk": "^13.3.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.4",
    "@types/prompt": "^1.1.9",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.8.4",
    "base64url": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "big.js": "^7.0.1",
    "body-parser": "^1.20.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv-safe": "^9.1.0",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "minimatch": "^3.1.2",
    "pg": "^8.16.3",
    "pino": "^9.4.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^11.2.2",
    "prompt": "^1.3.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.25",
    "yargs": "^18.0.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.3"
  },
  "overrides": {
    "bootstrap": "5.3.3"
  }
}
